      /* -------------------- TIPOGRAFÍAS -------------------- */
      h1, h2, h3, .serif {
        font-family: "Playfair Display", serif;
        margin: 0 0 1rem 0;
      }

      h1 { font-size: clamp(1rem, 4vw, 3rem); font-weight: 700; line-height: 1.3;}
      h2 { font-size: clamp(1.125rem, 2.2vw, 1.375rem); font-weight: 400;line-height: 1.3; }
	  h3 { font-size: clamp(1rem, 1.8vw, 1.25rem); font-weight: 100;line-height: 1.7; }
	  h4 { font-size: clamp(0.875rem, 1.5vw, 1rem); font-weight: 100; line-height: 1.3; }

      /* -------------------- CONTAINER -------------------- */
      .container {
        min-height: 100vh;
        padding: 20px;
        max-width: var(--max-width);
        margin: 0 auto;
       
      }

      /* -------------------- HEADER / NAVBAR -------------------- */
.header {
  display: flex;
  justify-content: space-between; /* logo izquierda, burger derecha */
  align-items: center;
  gap: 12px;
  padding-left: 10px;
  padding-right: 0px; /* igual al container */
  background-color: #dadada00;
}

.logo {
  display: block;
  margin: 0;
  text-align: left;
}
      .menu-btn {
		order: 1;
        font-size: 20px;
        background: none;
        border: none;
        cursor: pointer;
		color: #002C14;
      }
@media (min-width: 900px) {
  .header {
    flex-direction: row;       /* mantener logo y burger en la misma fila */
    justify-content: center;   /* centro horizontal del conjunto */
    align-items: center;       /* centrado vertical con el texto */
    gap: 20px;
    padding: 20px 0;
  }

  .logo {
    margin: 0;                 /* sin auto, así se alinea con el texto */
    text-align: center;
  }

  .menu-btn {
    position: right;        /* siempre a la derecha */
    right: 20px;               /* ajustar distancia al borde */
    top: 50%;                  /* centro vertical del header */
    transform: translateY(-50%);
  }
}
      /* -------------------- HERO -------------------- */
     .hero {
  display: flex;
  flex-direction: column;
  align-items: center; /* centra todo horizontalmente */
  text-align: center;
}

      /* -------------------- INPUT -------------------- */
      .input {
        width: 100%;
        padding: 0;
        margin-bottom: 30px;
        border: none;
        border-bottom: 1px solid var(--color-foreground);
        background: transparent;
        outline: none;
        font-size: 1rem;
      }

      /* -------------------- BOTONES -------------------- */
      .hero-buttons {
  display: flex;
  gap: 10px;                 /* espacio entre botones */
  justify-content: flex-start; /* alineación a la izquierda */
  flex-wrap: wrap;            /* opcional: que bajen en mobile si no caben */
}

.btn {
  width: 160px;              /* mismo tamaño fijo para todos */
  padding: 14px 0;           /* altura consistente */
  margin-bottom: 20px;
  border-radius: var(--radius);
  font-size: 14px;
  cursor: pointer;
  text-align: center;
}

.btn-primary {
  background: var(--color-strong);
  color: white;
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 1px solid var(--color-strong);
  color: var(--color-strong);
}


      /* -------------------- MENÚ FULLSCREEN -------------------- */
      .fullscreen-menu {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(221, 221, 221, 221);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transform: translateY(-100%);
        transition: transform 0.3s ease;
        z-index: 999;
      }

      .fullscreen-menu.open {
        transform: translateY(0);
      }

      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 36px;
        background: none;
        border: none;
         color: #002C14; /* cambia a tu color deseado */
        cursor: pointer;
      }

      .fullscreen-menu ul {
        list-style: none;
        padding: 0;
        margin: 0;
        text-align: center;
      }

      .fullscreen-menu li {
        margin: 20px 0;
      }

      .fullscreen-menu a {
        color: rgb(0, 44, 20);
        font-size: 32px;
        text-decoration: none;
        font-weight: 600;
        font-family: "Barlow", sans-serif; /* links del navbar */
        font-size: 15px;
        transition: color 0.2s;
      }

      .fullscreen-menu a:hover {
        color: #666666;
      }

