      /* -------------------- VARIABLES -------------------- */
      :root {
       --color-foreground: #083b22;
  --color-strong: #003414;
  --radius: 40px;
  --max-width: 1200px;
  /* --- NUEVAS VARIABLES PARA EL DEGRADE ANIMADO --- */
  --color-aural-start: #e9f1c6; /* Color inicial (Gris claro) */
  --color-aural-end: #8ab094; /* Color final (Verde claro) */
  --color-aural-mid: #6e8eaa; /* Un color intermedio sutil */
}
        
      

      /* -------------------- BODY -------------------- */
body {
  font-family: "Barlow", sans-serif;
  line-height: 1.1; /* Ajustado según tu petición anterior */
  color: var(--color-foreground);
  min-height: 100vh;
  margin: 0;

  /* --- FONDO CON TEXTURA Y DEGRADADO --- */
  background: 
    /* Capa 1: Textura Rugosa (Imagen) */
    /* Puedes usar una URL de una imagen de ruido o grano */
    url('https://www.transparenttextures.com/patterns/wavecut.png'), 
    /* Capa 2: Tu degradado animado */
    linear-gradient(
      300deg,
      var(--color-aural-start),
      var(--color-aural-mid),
      var(--color-aural-end)
    );

  /* IMPORTANTE: El primer valor es para la textura, el segundo para el degradado */
  background-size: auto, 1000% 1000%; 
  
  /* Esto asegura que la textura se repita y el degradado cubra todo */
  background-repeat: repeat, no-repeat;
  
  /* Animación del degradado */
  animation: auraMovement 30s ease infinite alternate;
}

/* -------------------- DEFINICIÓN DE LA ANIMACIÓN -------------------- */
@keyframes auraMovement {
  0% {
    background-position: 0% 0%, 0% 50%; /* La textura se queda fija (0,0), el degradado se mueve */
  }
  50% {
    background-position: 0% 0%, 100% 50%;
  }
  100% {
    background-position: 0% 0%, 0% 50%;
  }
}

