---
interface Props {
  title?: string;
   bgClass?: string; // nueva prop
}
const { title = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@300;400;600&family=Playfair+Display:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title ? `${title} — Mi sitio` : "Nahun Saldaña Macedo"}</title>

    <!-- CSS GLOBAL -->
    <style is:global>
      /* -------------------- RESET -------------------- */
      *, *::before, *::after {
        box-sizing: border-box;
      }
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
      }

      /* -------------------- VARIABLES -------------------- */
      :root {
        --color-foreground: #083b22;
        --color-strong: #003414;
        --radius: 40px;
      }

      /* -------------------- BODY -------------------- */
      body {
        font-family: "Barlow", sans-serif;
        line-height: 1.45;
        background: white;
        color: var(--color-foreground);
      }
	  body.bg-special {
        background: #f0f8f0; /* fondo especial, cambia a tu color */
      }

      /* -------------------- TIPOGRAFÍAS -------------------- */
      h1, h2, h3, .serif {
        font-family: "Playfair Display", serif;
        margin: 0 0 1rem 0;
      }

      h1 { font-size: clamp(2rem, 4vw, 3rem); font-weight: 700; }
      h2 { font-size: clamp(1.125rem, 2.2vw, 1.375rem); font-weight: 400; }
	  h3 { font-size: clamp(1rem, 1.8vw, 1.25rem); font-weight: 100; }

      /* -------------------- CONTAINER -------------------- */
      .container {
        min-height: 100vh;
        padding: 20px;
        max-width: var(--max-width);
        margin: 0 auto;
        background: linear-gradient(#dadada, #c5eeb9);
      }

      /* -------------------- HEADER / NAVBAR -------------------- */
      .header {
        display: flex;
        justify-content: space-between; /* espacio entre logo y menú */
        align-items: center;            /* centrado vertical */
        gap: 12px;
       
        position: sticky;
        top: 0;
        z-index: 1000;
        flex-wrap: wrap;
      }

	  .header-wrapper {
  max-width: 1200px;  
  padding: 0 20px;    
  margin: 0 auto;     
}
.logo-img {
  display: block;       /* permite usar margin auto */
  max-width: 150px;     /* ajusta al tamaño que necesites */
  height: auto;
  margin: 0;            /* se alinea con padding del wrapper */
}
 .logo {
  font-size: 20px;
  font-weight: 600;
  white-space: nowrap;
  text-decoration: none;
  color: var(--color-foreground);
  display: block;       /* permite centrar si es bloque */
  text-align: center;   /* centra el texto dentro del <a> */
  margin: 0 auto;       /* centra el bloque en el header */
}

      .menu-btn {
        font-size: 20px;
        background: none;
        border: none;
        cursor: pointer;
      }

      /* -------------------- HERO -------------------- */
     .hero {
  display: flex;
  flex-direction: column;
  align-items: center; /* centra todo horizontalmente */
}

      /* -------------------- INPUT -------------------- */
      .input {
        width: 100%;
        padding: 0;
        margin-bottom: 30px;
        border: none;
        border-bottom: 1px solid var(--color-foreground);
        background: transparent;
        outline: none;
        font-size: 1rem;
      }

      /* -------------------- BOTONES -------------------- */
      .hero-buttons {
  display: flex;
  gap: 10px;                 /* espacio entre botones */
  justify-content: flex-start; /* alineación a la izquierda */
  flex-wrap: wrap;            /* opcional: que bajen en mobile si no caben */
}

.btn {
  width: 160px;              /* mismo tamaño fijo para todos */
  padding: 14px 0;           /* altura consistente */
  margin-bottom: 20px;
  border-radius: var(--radius);
  font-size: 14px;
  cursor: pointer;
  text-align: center;
}

.btn-primary {
  background: var(--color-strong);
  color: white;
  border: none;
}

.btn-secondary {
  background: transparent;
  border: 1px solid var(--color-strong);
  color: var(--color-strong);
}
      /* -------------------- MENÚ FULLSCREEN -------------------- */
      .fullscreen-menu {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(221, 221, 221, 221);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transform: translateY(-100%);
        transition: transform 0.3s ease;
        z-index: 999;
      }

      .fullscreen-menu.open {
        transform: translateY(0);
      }

      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 36px;
        background: none;
        border: none;
        color: white;
        cursor: pointer;
      }

      .fullscreen-menu ul {
        list-style: none;
        padding: 0;
        margin: 0;
        text-align: center;
      }

      .fullscreen-menu li {
        margin: 20px 0;
      }

      .fullscreen-menu a {
        color: rgb(0, 44, 20);
        font-size: 32px;
        text-decoration: none;
        font-weight: 600;
        font-family: "Barlow", sans-serif; /* links del navbar */
        font-size: 15px;
        transition: color 0.2s;
      }

      .fullscreen-menu a:hover {
        color: #666666;
      }

      /* -------------------- RESPONSIVE -------------------- */
     @media (min-width: 900px) {
		  .menu-btn {
    display: none; /* ocultamos el burger */
  }
  .header {
    display: flex;
    flex-direction: column; /* columna: logo arriba, enlaces debajo */
    align-items: center;    /* centro horizontal */
    justify-content: center;
    padding: 20px 0;
    gap: 20px;
  }
 a {
  text-decoration: none;
}

  .logo {
    font-size: 16px;
    text-align: center; /* aseguramos que quede centrado */
  }
.hero-foto {
  width: 250px;
  height: auto;
  display: block;      /* permite centrar */
  margin: 0 auto 10px; /* centro horizontal + separación abajo */
}

        .fullscreen-menu {
          position: static;
          transform: none !important;
          background: transparent;
          height: auto;
          flex-direction: row;
          display: flex !important;
          justify-content: center;
          align-items: center;
          gap: 80px;
        }

        .fullscreen-menu ul {
          display: flex;
          gap: 40px;
        }

        .fullscreen-menu li {
          margin: 0;
        }

        .fullscreen-menu a {
          font-size: 12px;
          color: var(--color-foreground);
        }

        .close-btn {
          display: none;
        }
      }


	  .proyectos {
  padding: 10px 0px;
  max-width: 1200px;
  margin: 0 auto;
}

.proyectos h2 {
  text-align: center;
  font-family: "Playfair Display", serif;
  font-size: clamp(2rem, 4vw, 2.5rem);
  margin-bottom: 40px;
}

.proyectos-grid {
  display: grid;
  grid-template-columns: 1fr; /* mobile: 1 columna */
  gap: 30px;
}

.proyecto {
  position: relative;
  overflow: hidden;
  border-radius: 16px;
  display: block;        /* asegúrate que el link sea bloque */
  text-decoration: none; /* quitar subrayado de link */
}

.proyecto:hover .proyecto-texto {
  background: rgba(0, 0, 0, 0.7); /* efecto hover opcional */
}

.proyecto img {
  width: 100%;
  display: block;
  border-radius: 16px;
}

.proyecto-texto {
  position: absolute;
  bottom: 16px;
  left: 16px;
  color: white;
  background: rgba(0, 0, 0, 0.5); /* fondo semi-transparente para que el texto destaque */
  padding: 12px 16px;
  border-radius: 8px;
}

.proyecto-texto h3 {
  margin: 0;
  font-size: 18px;
  font-family: "Playfair Display", serif;
  font-weight: 700;
}

.proyecto-texto p {
  margin: 4px 0 0 0;
  font-size: 14px;
}

/* Desktop: dos columnas */
@media (min-width: 900px) {
  .proyectos-grid {
    grid-template-columns: 1fr 1fr;
  }

  .proyecto-texto h3 {
    font-size: 20px;
  }

  .proyecto-texto p {
    font-size: 15px;
  }
}
    </style>
  </head>

  <body>
    <slot />
  </body>
</html>
